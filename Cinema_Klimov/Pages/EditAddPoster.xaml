<Page x:Class="Cinema_Klimov.Pages.EditAddPoster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditAddPoster">

    <Grid>
        <Border Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#52b788">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7" Orientation="Horizontal">
                    <Image Source="/Images/post.png"  Height="38" Width="50"/>
                    <Label x:Name="lb" Content="Добавление афиши" VerticalAlignment="Center" FontSize="20" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="7" Orientation="Horizontal">
                    <Button Click="ToPoster" Content="Вернуться" FontSize="20" Width="130" Background="#d8f3dc" Foreground="#081c15" FontWeight="Bold" Height="35"/>
                </StackPanel>
            </Grid>
        </Border>
        <Border Margin="0,50,0,0" Background="#d8f3dc">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
                    <Button x:Name="btn" Click="AddPoster" Content="Добавить" FontSize="15" Width="175" Background="#2d6a4f" Foreground="White" FontWeight="Bold" Height="29"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0,10,10">
                    <Label Content="Название фильма:" FontSize="15"/>
                    <TextBox x:Name="tbFilmPoster" Height="30" Padding="5" Margin="0,0,0,7"/>
                    <Label Content="Дата начала:" FontSize="15"/>
                    <DatePicker x:Name="tbDateCinema" Height="30" Background="White" Padding="5" Margin="0,0,0,7"/>
                    <Label Content="Кинотеатр:" FontSize="15"/>
                    <ComboBox x:Name="tbCinema" Height="30" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0,10,10">
                    <Label Content="Цена билета:" FontSize="15"/>
                    <TextBox x:Name="tbPricePoster" Height="30" Padding="5" Margin="0,0,0,7"/>
                    <Label Content="Время начала:" FontSize="15"/>
                    <TextBox x:Name="tbTimeCinema" Height="30" Padding="5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
