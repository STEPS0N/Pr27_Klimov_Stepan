<Page x:Class="Cinema_Klimov.Pages.EditAddCinema"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditAddCinema">

    <Grid>
        <Border Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#52b788">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7" Orientation="Horizontal">
                    <Image Source="\Images\logo.png" Height="38" Width="50"/>
                    <Label x:Name="lb" Content="Добавление кинотеатра" VerticalAlignment="Center" FontSize="20" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="7" Orientation="Horizontal">
                    <Button Click="ToCinema" Content="Вернуться" FontSize="20" Width="130" Background="#d8f3dc" Foreground="#081c15" FontWeight="Bold" Height="35"/>
                </StackPanel>
            </Grid>
        </Border>
        <Border Margin="0,50,0,0" Background="#d8f3dc">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
                    <Button x:Name="btn" Click="AddCinema" Content="Добавить" FontSize="15" Width="175" Background="#2d6a4f" Foreground="White" FontWeight="Bold" Height="29"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0,10,10">
                    <Label Content="Название:" FontSize="15"/>
                    <TextBox FontSize="14" x:Name="tbTitleCinema" Height="30" Padding="5" Margin="0,0,0,7" Text=""/>
                    <Label Content="Количество мест:" FontSize="15"/>
                    <TextBox FontSize="14" x:Name="tbPlacesCinema" Height="30" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0,10,10">
                    <Label Content="Количество залов:" FontSize="15"/>
                    <TextBox FontSize="14" x:Name="tbHallsCinema" Height="30" Padding="5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
