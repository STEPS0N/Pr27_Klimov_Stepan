<Page x:Class="Cinema_Klimov.Pages.PosterPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PosterPg">

    <Grid>
        <Border Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#52b788">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7" Orientation="Horizontal">
                    <Image Source="\Images\post.png" Height="38" Width="50"/>
                    <Label Content="Афиши" VerticalAlignment="Center" FontSize="20" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="7" Orientation="Horizontal">
                    <Button Click="ToCinemas" Content="Кинотеатры" FontSize="20" Width="146" Background="#d8f3dc" Foreground="#081c15" FontWeight="Bold" Height="35"/>
                </StackPanel>
            </Grid>
        </Border>
        <Border Margin="0,50,0,0" Background="#d8f3dc">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
                    <Button Click="AddPoster" Content="Добавить афишу" FontSize="15" Width="175" Background="#2d6a4f" Foreground="White" FontWeight="Bold" Height="29"/>
                </StackPanel>
                <ScrollViewer Grid.Row="1">
                    <StackPanel x:Name="parentPoster" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Stretch">

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
