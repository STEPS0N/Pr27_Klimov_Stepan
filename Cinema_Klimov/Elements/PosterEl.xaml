<UserControl x:Class="Cinema_Klimov.Elements.PosterEl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cinema_Klimov.Elements"
             mc:Ignorable="d">
    <Grid Background="#FF67AF8E" Margin="0,0,0,5">
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="10">
                    <Image Source="\Images\movie.png" Width="112" HorizontalAlignment="Left" Height="168"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Label x:Name="titlePoster" Content="Название" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <Label x:Name="cinemaPoster" Content="(Кинотеатр)" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Label x:Name="timePoster" Content="Время сеанса:" Foreground="White" FontSize="17" Margin="0,0,0,10"/>
                    <Label x:Name="pricePoster" Content="Цена билета:" Foreground="White" FontSize="17"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="10" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Click="EditPoster" Content="Изменить" Background="#d8f3dc" FontSize="15" FontWeight="Bold" Width="125" Height="28" Margin="0,0,0,20"/>
                    <Button Click="DeletePoster" Content="Удалить" Background="OrangeRed" Foreground="White" FontWeight="Bold" FontSize="15" Width="125" Height="28"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
